<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="review">

<select id="getHolidayList" parameterType="HashMap" resultType="bean.HolidayListBean">
SELECT HLD_INDEX,HLD_KUBUN,HLD_REASON,HLD_START,HLD_END,REQ_DAY,CPL_DAY,AUTH_USER,DOC_STATUS,HLD_REJECT_REASON
FROM holidaytbl
WHERE USER_ID = #{USER_ID}
</select>

	<select id="getUserInfo" parameterType="HashMap" resultType="bean.userInfoBean">
		SELECT USER_ID,USER_PASSWORD,USER_CCFNAME,USER_CCLNAME,USER_DEPARTMENT,USER_RANK,AUTH_FLG,AUTH_LVL
		FROM UserInfoTBL
		WHERE USER_ID = #{UESR_ID}
	</select>

</mapper> 