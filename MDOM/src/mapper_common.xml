<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="common">

	<select id="loginPass" parameterType="HashMap" resultType="bean.US_InfoVO">
		SELECT *
		FROM UserInfoTBL
		WHERE USER_ID = #{id} and USER_PASSWORD = #{pw}
	</select>
	
	<select id="getUserInfo" parameterType="HashMap" resultType="bean.US_InfoVO">
		SELECT USER_ID,USER_PASSWORD,USER_CCFNAME,USER_CCLNAME,USER_DEPARTMENT,USER_RANK,AUTH_FLG,AUTH_LVL
		FROM UserInfoTBL
		WHERE USER_ID = #{id}
	</select>
	
</mapper> 